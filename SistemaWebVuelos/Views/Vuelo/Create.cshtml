@model SistemaWebVuelos.Models.Vuelo

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar vuelo</title>
</head>
<body>
    @using (Html.BeginForm())
    {

            <div class="grid">
                <div class="col1">
                    @Html.LabelFor(model => model.Fecha):
                </div>
                <div class="col2">
                    @Html.EditorFor(model => model.Fecha)
                    @Html.ValidationMessageFor(model => model.Fecha)
                </div>
                <div class="col1">
                    @Html.LabelFor(model => model.Destino):
                </div>
                <div class="col2">
                    @Html.EditorFor(model => model.Destino)
                    @Html.ValidationMessageFor(model => model.Destino)
                </div>
                <div class="col1">
                    @Html.LabelFor(model => model.Origen):
                </div>
                <div class="col2">
                    @Html.EditorFor(model => model.Origen)
                    @Html.ValidationMessageFor(model => model.Origen)
                </div>
                <div class="col1">
                    @Html.LabelFor(model => model.Matricula):
                </div>
                <div class="col2">
                    @Html.EditorFor(model => model.Matricula)
                    @Html.ValidationMessageFor(model => model.Matricula)
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Volver a vuelos", "Index")
        </div>
   
    </body>
</html>
